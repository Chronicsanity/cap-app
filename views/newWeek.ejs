<body>
    <table class="table">
        <thead>
          <tr>
            <th>Shifts: </th>
    
          </tr>
        </thead>
        <tbody>
           
          
          
            <% for (var i = 0; i < info.length; i++) { %>
            
                <tr>
                    <td><%= info[i].DaysAssigned %> </td>
                 
                    
                   
                </tr>
                <%  } %>

            </table>
         

            <div> 
                
                
                <form id="tableForm" action="/newWeek" method="POST">
                    <select class="selectpicker" data-style="btn-info" name="selectweek">
                        <optgroup label="Select Days">
                            <option name="" value="0">Add Day</option>
                            <option name="Mon" value="Mon">Monday</option>
                            <option name="Tue" value="Tue">Tuesday</option>
                            <option name="Wed" value="Wed">Wednesday</option>
                            <option name="Thu" value="Thu">Thursday</option>
                            <option name="Fri" value="Fri">Friday</option>
                            <option name="Sat" value="Sat">Saturday</option>
                            <option name="Sun" value="Sun">Sunday</option>
                        </optgroup>
                    </select>
                    <td><input type="radio" id="enabled" name="time" value="AM">AM</input> </td>
                    <td><input type="radio" id="enabled" name="time" value="PM">PM</input> </td>


                <button type="submit" name="add" value="newDay" class="btn btn-success rounded-pill">Add</button>
                <button type="submit" name="remove" value="removeDay" class="btn btn-success rounded-pill">Delete</button>

</form>
                
            </div>
          </tbody>
       



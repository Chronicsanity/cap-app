<!DOCTYPE html>
<html>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
	</script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="./css/root.css">
                
<head>
	
</head>

<body>
    <table class="table">
        <thead>
          <tr>
            <th>Shifts: </th>
    
          </tr>
        </thead>
        <tbody>
           
          
          
            <% for (var i = 0; i < info.length; i++) { %>
            
                <tr>
                    <td><%= info[i].DaysAssigned %>    <%= info[i].Shift_counter %></td>
                 
                    
                   
                </tr>
                <%  } %>

            </table>
         

            <div> 
                
                
                <form id="tableForm" action="/newWeek" method="POST">
                    <select class="selectpicker" data-style="btn-info" name="selectweek">
                        <optgroup label="Select Days">
                            <option name="" value="0">Add Day</option>
                            <option name="Mon" value="Mon">Monday</option>
                            <option name="Tue" value="Tue">Tuesday</option>
                            <option name="Wed" value="Wed">Wednesday</option>
                            <option name="Thu" value="Thu">Thursday</option>
                            <option name="Fri" value="Fri">Friday</option>
                            <option name="Sat" value="Sat">Saturday</option>
                            <option name="Sun" value="Sun">Sunday</option>
                        </optgroup>
                    </select>
                    <td><input type="radio" id="enabled" name="time" value="AM">AM</input> </td>
                    <td><input type="radio" id="enabled" name="time" value="PM">PM</input> </td>
<br>
                        Choose the number of the shift you would like to remove:
                        <br>
                    <select id="removal" name="removalNumber">
  
          
                        <% for(var i=0; i < info.length; i++) { %>
                          <%if(info[i] === info.length){%>
                          <% i++ }%>
              
                          <option value="<%= info[i].Shift_counter %>"><%= info[i].Shift_counter %></option>
                          <% } %>
                      </select>
<br>

                <button type="submit" name="add" value="newDay" class="btn btn-success rounded-pill">Add</button>
                <button type="submit" name="remove" value="removeDay" class="btn btn-success rounded-pill">Delete</button>

</form>
                
            </div>
          </tbody>
       
          <div><a href="/data">Create New Employee</a>
          </div>
          <div><a href="/createAssignments">Create New Assignments</a>
          </div>
          <div><a href="/daysAssignment">Associate Assignment to Shift</a>
          </div>
          <div><a href="/shiftmaker">Associate Employee to Shift</a>
          </div>
          

</body>
            </div>
        </div>
        </div>
</html>
<body>
  
    <table class="table">
        <thead>
          <tr>
           <th>Employee </th> 
           <th>Job Title</th>
          </tr>
        </thead>
        <tbody>
            <% for (var i = 0; i < user.length; i++) { %>
            
                <tr>
                    <td><%= user[i].user %></td>
                    <td><%= user[i].job_title %> </td>
            
                </tr>
            <%  } %>
        </tbody>
    </table>
            <div>
                <p>Add New Employee: </p>
            </div>
            <form action="/data" method="POST" class="pt-3">
                <div class="form-group">
                    <input type="username" class="form-control" placeholder="Employee Name" name="employee_name">
                </div>
                <div class="form-group">
                    <select class="selectpicker" data-style="btn-info" name="job_choice">
                        <optgroup label="Select Employee's Job Title">
                            <option name="" value="0">Select Title</option>
                            <option name="headChef" value="headChef">Chef de Cuisine</option>
                            <option name="sousChef" value="sousChef">Sous Chef</option>
                            <option name="lineCook" value="lineCook">Chef de Partie</option>
                            <option name="busser" value="busser">Busser</option>
                        </optgroup>
                    </select>
                </div>
  
                <button type="submit" name="acceptEmployee" value="addEmployee" class="btn btn-success rounded-pill">Accept</button>
            </form>
<div>
   <p> Remove Employee: </p>
</div>
<form action="/data" method="POST" class="pt-3">
    <div class="form-group">
        <input type="username" class="form-control" placeholder="Employee Name" name="remove_Employee">
        <button type="submit" name="rejectEmployee" value="subEmployee" class="btn btn-success rounded-pill">Remove</button>
    </div>


</body>

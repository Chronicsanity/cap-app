<!DOCTYPE html>
<html>
    <div class="text-center center-div" id="login">
        <div class="container w-25 border py-5">
            <div class="title pb-5">
                <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
                
<head>
	
</head>

<body>
  
    <table class="table">
        <thead>
          <tr>
           
            <th>Name</th>
           
            <th>Email </th>

            <th>ID </th>
          </tr>
        </thead>
        <tbody>
           
         
            <% for (var i = 0; i < user.length; i++) { %>
            
                <tr>
                    <td><%= user[i].username %></td>
                    <td><%= user[i].email %> </td>
                    <td><%= user[i].id %> </td>
                </tr>
            <%  } %>
            <div>
                <p>Add New User</p>
            </div>
            <form action="/data" method="POST" class="pt-3">
                <div class="form-group">
                    <input type="username" class="form-control" placeholder="username" name="username">
                    <small class="form-text text-muted text-left">Register Username</small>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <input class="form-control" name="email" placeholder="email">
                </div>
                <div class="form-group">
                    <input class="form-control" name="role" placeholder="1, 2, 3">
                </div>
                <button type="submit" name="newUser_button" value="newUser" class="btn btn-success rounded-pill">New User</button>
                <button type="submit" name="delete_button" value="deleteUser" class="btn btn-success rounded-pill">Delete User</button>
            </form>

          </tbody>
        </table>


</body>
            </div>
        </div>
        </div>
</html>
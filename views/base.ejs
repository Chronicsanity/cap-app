<h1>Login</h1>

<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            
            <span>Log in for the existing user</span>
            <% if(locals.logout){ %>
                <div class="alter alert-success text-center">
                    <%= logout %>
                </div>
            <% } %>
        </div>
        <form action="/api/auth/signin" method="POST" class="pt-3">
            <div class="form-group">
                <input type="username" class="form-control" placeholder="username" name="username">
                <small class="form-text text-muted text-left">Register Username</small>
            </div>
            <div class="form-group">
                <input type="password1" class="form-control" name="password1" placeholder="password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Submit</button>
        </form>
    </div>
</div>
